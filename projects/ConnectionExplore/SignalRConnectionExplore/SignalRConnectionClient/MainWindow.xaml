<Window x:Class="SignalRConnectionClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SignalRConnectionClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Top" Margin="10">
            <TextBox x:Name="UrlTextBox" Width="300" Height="30" Margin="0,0,0,10"/>
            <Button x:Name="connectButton" Content="Connect" Width="100" Height="30" Margin="0,0,0,10" Click="ConnectButton_Click"/>
            <Button x:Name="disconnectButton" Content="Disconnect" Width="100" Height="30" Click="DisconnectButton_Click" IsEnabled="False"/>
        </StackPanel>
        <Ellipse x:Name="connectionStatusIndicator" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Fill="Red"/>
    </Grid>
</Window>
